@model BookSelling.Models.Advertisement

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Advertisement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype ="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TypeofAdd">Type of Ad</label>
                <input hidden asp-for="TypeofAdd" class="form-control" value="default"/>
                <span hidden asp-validation-for="TypeofAdd" class="text-danger"></span>
                <select id="TypeofAdd" name="typeAd">
                <option value="Sell">Sell</option>
                <option value="Rent">Rent</option>
                <option value="Trade">Trade</option>                
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ISBM" class="control-label"></label>
                <input asp-for="ISBM" class="form-control" />
                <span asp-validation-for="ISBM" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label hidden asp-for="UserID" class="control-label"></label>
                <select hidden asp-for="UserID" class ="form-control" asp-items="ViewBag.UserID"></select>
            </div>
            <div class="form-group form-check">
                <label hidden class="form-check-label">
                    <input hidden class="form-check-input" asp-for="sold" /> @Html.DisplayNameFor(model => model.sold)
                </label>
            </div>
            <div class="form-group form-check">
                <label hidden class="form-check-label" >
                    <input  hidden class="form-check-input" asp-for="Visibility" /> @Html.DisplayNameFor(model => model.Visibility)
                </label>
            </div>
            <div class="form-group">
                <label hidden asp-for="DateTime" class="control-label"></label>
                <input hidden asp-for="DateTime" class="form-control" value="@DateTime.Now"/>
                <span hidden asp-validation-for="DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="Photo" class="control-label"></label>
            <input hidden asp-for="Photo" class="form-control" value=""/>
            <input type="file" name="newphoto" class="form-control" accept=".jpg,.png,.jpeg" />
            <span asp-validation-for="Photo" class="text-danger"></span>
            </div>

            @*<div id="checkboxes">
              <label>Categorias</label>
                <input type="checkbox" name="ChoosenCategory" value="Fantasy" />
                <input type="checkbox" name="ChoosenCategory" value="Action" />
            </div>*@

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"/>

            <div style="border-top: 20px solid transparent;border-bottom: 5px solid transparent; width:625px">
              <div class="form-group col-sm-8">
                <label>Categories</label>
                <label for="myMultiselect"></label>
                <div id="myMultiselect" class="multiselect">
                  <div id="mySelectLabel" class="selectBox" onclick="toggleCheckboxArea()">
                    <select class="form-select">
                      <option>somevalue</option>
                    </select>
                    <div class="overSelect"></div>
                  </div>
                  <div id="mySelectOptions">
                    <label for="one"><input name="ChoosenCategory" type="checkbox" id="one" onchange="checkboxStatusChange()" value="Action" />Action</label>
                    <label for="two"><input name="ChoosenCategory" type="checkbox" id="two" onchange="checkboxStatusChange()" value="Adventure" />Adventure</label>
                    <label for="three"><input name="ChoosenCategory" type="checkbox" id="three" onchange="checkboxStatusChange()" value="Comedy" />Comedy</label>
                    <label for="four"><input name="ChoosenCategory" type="checkbox" id="four" onchange="checkboxStatusChange()" value="Drama" />Drama</label>
                    <label for="five"><input name="ChoosenCategory" type="checkbox" id="five" onchange="checkboxStatusChange()" value="Fantasy" />Fantasy</label>
                    <label for="six"><input name="ChoosenCategory" type="checkbox" id="six" onchange="checkboxStatusChange()" value="Science Fiction" />Science Fiction</label>
                    <label for="seven"><input name="ChoosenCategory" type="checkbox" id="seven" onchange="checkboxStatusChange()" value="Romance" />Romance</label>
                    <label for="eight"><input name="ChoosenCategory" type="checkbox" id="eight" onchange="checkboxStatusChange()" value="Horror" />Horror</label>
                    <label for="nine"><input name="ChoosenCategory" type="checkbox" id="nine" onchange="checkboxStatusChange()" value="Erotic" />Erotic</label>
                    <label for="ten"><input name="ChoosenCategory" type="checkbox" id="ten" onchange="checkboxStatusChange()" value="Thriller" />Thriller</label>
                    <label for="eleven"><input name="ChoosenCategory" type="checkbox" id="eleven" onchange="checkboxStatusChange()" value="Kids" />Kids</label>
                    <label for="twelve"><input name="ChoosenCategory" type="checkbox" id="twelve" onchange="checkboxStatusChange()" value="Mistery" />Mistery</label>
                    <label for="thirteen"><input name="ChoosenCategory" type="checkbox" id="thirteen" onchange="checkboxStatusChange()" value="Suspance" />Suspance</label>
                    <label for="fourteen"><input name="ChoosenCategory" type="checkbox" id="fourteen" onchange="checkboxStatusChange()" value="Comic" />Comic</label>
                  </div>
                </div>
              </div>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}