@model BookSelling.Models.Favorite

@{
    ViewData["Title"] = "Edit";
}
@if(User.Identity.IsAuthenticated)
{
    {
        <h1>Edit</h1>

        <h4>Favorite</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="AdvertisementID" class="control-label"></label>
                        <select asp-for="AdvertisementID" class="form-control" asp-items="ViewBag.AdvertisementID"></select>
                        <span asp-validation-for="AdvertisementID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UtilizadoresID" class="control-label"></label>
                        <select asp-for="UtilizadoresID" class="form-control" asp-items="ViewBag.UtilizadoresID"></select>
                        <span asp-validation-for="UtilizadoresID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    }
}